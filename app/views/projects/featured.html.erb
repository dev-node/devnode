<div class="page-header" style="background-image:url('/images/devnode_slider_1.jpg');">
  <div class="page-header-text">
    <h1>Featured Projects</h1>
  </div>
</div>
                                
<div class="container main-container page-container">

      <div class="row-fluid">
        <% @projects.limit(10).each do |project| %>
          <div class="span6 feature-box">
            <%= link_to (image_tag project.video_thumb, class: "feature-img" ), project %>
            <h2><%= link_to (project.name), project %></h2>
            <h5>by <%= link_to project.user.nickname, user_path(project.user.id) %></h5>
            <p style="max-width: 280px; min-height: 150px;"><%= project.description.truncate(175, separator: ' ') %></p>
            <div class="bottom-feature-box">
              <% votes = project.get_upvotes.size - project.get_downvotes.size %>
              <p><%= votes %> 
              <% if votes >= 0 %>
              <i class="fa fa-thumbs-o-up"></i>
              <% else %>
              <i class="fa fa-thumbs-o-down"></i>
              <% end %>
              </p>
              <p>
              <%= project.followers.size %> Followers
              </p>
            </div>
          </div>
        <% end %>
      </div>
</div>